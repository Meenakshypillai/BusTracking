<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg1"
    android:orientation="vertical"
    android:stretchColumns="1">

    <TableRow>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_span="2"
            android:gravity="center_horizontal"
            android:text="Login Form"
            app:srcCompat="@drawable/buslogo" />

    </TableRow>

    <!--<TableRow android:padding="5dip">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="352dp"
            android:layout_height="124dp"
            android:layout_marginBottom="20dp"
            android:layout_span="2"
            android:gravity="center_horizontal"
            app:srcCompat="@drawable/iconlogin" />

    </TableRow> -->
    <TableRow>

        <TextView
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:text="Name"
            android:textColor="#5EB246"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etName"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:background="#fff"
            android:hint="UserName"
            android:inputType="text"
            android:padding="5dp"
            android:textColor="#000" />
    </TableRow>
    <TableRow>

        <TextView
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:text="Phone"
            android:textColor="#5EB246"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:background="#fff"
            android:hint="Phone No"
            android:inputType="phone"
            android:padding="5dp"
            android:textColor="#000" />
    </TableRow>


    <TableRow>

        <TextView
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:text="UserName"
            android:textColor="#5EB246"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etUserName"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:background="#fff"
            android:inputType="text"
            android:hint="UserName"
            android:padding="5dp"
            android:textColor="#000" />
    </TableRow>
    <TableRow>

        <TextView
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:text="email"
            android:textColor="#5EB246"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:background="#fff"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:padding="5dp"
            android:textColor="#000" />
    </TableRow>


    <TableRow>

        <TextView
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Password"
            android:textColor="#5EB246"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etPassword"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="#fff"
            android:hint="Ppassword"
            android:padding="5dp"
            android:textColor="#000" />
    </TableRow>


    <TableRow android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="266dp"
            android:layout_height="87dp"
            android:layout_span="2"
            android:gravity="center_horizontal"
            android:onClick="processLoginlinkClick"
            app:srcCompat="@drawable/login_new" />


    </TableRow>
    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already registrered?"
            android:textColor="#5EB246"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5EB246"
            android:text="Login"  android:onClick="processSigInlinkClick"/>

    </TableRow>

</TableLayout>

